FROM ubuntu:20.04

# Passed in by docker-compose.yaml
ARG BITCOIN_VERSION

# Expose bitcoin ports
EXPOSE 8332 8333

# Install apt dependencies, cleanup
RUN apt update \
    && apt install -y --no-install-recommends \
        build-essential \
        libtool \
        autotools-dev \
        automake \
        pkg-config \
        bsdmainutils \
        libevent-dev \
        libboost-dev \
        libboost-system-dev \
        libboost-filesystem-dev \
        libboost-test-dev \
        python3 \
        ca-certificates \
        curl \
        libsqlite3-dev \
    && apt clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Build
WORKDIR "/bitcoin"
COPY ./scripts/build .
RUN chmod +x build && ./build

# Set up an entrypoint script to do pre-run initialization
WORKDIR "/root"
COPY ./scripts/init .
RUN chmod +x init
ENTRYPOINT ["./init"]

# To the moon!
CMD ["bitcoind"]